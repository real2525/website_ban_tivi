<!DOCTYPE html>
<html>
<head>
    <title>Thế Giới Tivi</title>
    <meta charset="utf-8" />
    <link rel="shortcut icon" type="image/png" href="~/Content/images/icon/Lo_go.png" />
    @*các thư viện boostrap với font*@  
    <link rel="stylesheet" href="~/Content/css/bootstrap.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap-reboot.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap-grid.css">
    <link rel="stylesheet" href="~/Content/font/all.css">


    @*các thư viện slide*@ 
    <link rel="stylesheet" type="text/css" href="~/Content/css/reset.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/responsive.css">
    @*các thư viện của trang này*@ 
    <link href="~/Content/css/sb-admin-2.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/index.css">
    <link rel="stylesheet" href="~/Content/css/Rieng.css">
    <link rel="stylesheet" href="~/Content/css/main.css">
    

    @*thư viện trang báo lỗi*@
    <link rel="stylesheet" type="text/css" href="~/Content/css/animate.css">

    <link rel="stylesheet" type="text/css" href="~/Content/css/hamburgers.css">

    <link rel="stylesheet" type="text/css" href="~/Content/css/animsition.css">

    <link rel="stylesheet" type="text/css" href="~/Content/css/select2.css">

    <link rel="stylesheet" type="text/css" href="~/Content/css/daterangepicker.css">

    <link rel="stylesheet" type="text/css" href="~/Content/css/util.css">
    @RenderSection("ThemThuVienCss",false)

</head>
<body id="page-top">
    @* thanh menu *@
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top thanh_menu">
        @* logo *@
        <a class="navbar-brand" href="@Url.Action("Index","Home")">
            <img width="150" height="40" src="~/Content/images/icon/Lo_go.png" />
        </a>
        @* button hình 3 vạch khi thu trình duyệt nhỏ lại thì sẽ hiện ra *@
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        @* menu *@
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Home")">TRANG CHỦ</a>
                </li>

                @Html.Action("NhaSanXuatTiviPartial", "Layout")

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        GIÁ TIỀN
                    </a>
                    <div class="dropdown-menu fontchu">
                        <a class="dropdown-item" href="@Url.Action("XemSanPhamTheoGia", "Layout", new {@Gia=5000000,@MucDo=1 })">Dưới 5 Triệu</a>
                        <a class="dropdown-item" href="@Url.Action("XemSanPhamTheoGia", "Layout", new {@Gia=10000000,@MucDo=1 })">Dưới 10 Triệu</a>
                        <a class="dropdown-item" href="@Url.Action("XemSanPhamTheoGia", "Layout", new {@Gia=15000000,@MucDo=1 })">Dưới 15 Triệu</a>
                        <a class="dropdown-item" href="@Url.Action("XemSanPhamTheoGia", "Layout", new {@Gia=20000000,@MucDo=2 })">Trên 20 Triệu</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Home")">TIN TỨC</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link " href="#" id="navbardrop" data-toggle="dropdown">
                        <i class="fas fa-user-circle icon_menu_dangnhap"></i>
                    </a>
                    <div class="dropdown-menu fontchu">
                        @if(Session["taikhoan"]==null && Session["quyenhan"]==null)
                        {
                            <a class="dropdown-item" href="@Url.Action("DangNhap","DangNhap")">Đăng Nhập</a>
                            <a class="dropdown-item" href="@Url.Action("Dangky","DangKy")">Đăng Ký</a>
                        }
                        else
                        {
                            
                            if (Session["taikhoan"] != null && Int32.Parse(Session["quyenhan"].ToString()) == 1)
                            {
                                <a class="dropdown-item" href="@Url.Action("ThongTinCaNhan", "ThongTinCaNhan")">Thông Tin Cá Nhân</a>
                                <a class="dropdown-item" href="@Url.Action("DangXuat", "DangXuat")">Đăng Xuất</a>
                            }
                            else if (Session["taikhoan"] != null && Int32.Parse(Session["quyenhan"].ToString()) == 2)
                            {
                                <a class="dropdown-item" href="@Url.Action("Index", "Admin")">Trang Quản Trị</a>
                                <a class="dropdown-item" href="@Url.Action("ThongTinCaNhan", "ThongTinCaNhan")">Thông Tin Cá Nhân</a>
                                <a class="dropdown-item" href="@Url.Action("DangXuat", "DangXuat")">Đăng Xuất</a>
                            }
                        }
                        
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("GioHang","GioHang")"><i class="fab fa-opencart icon_menu_dangnhap"></i></a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
               
                <form class="form-inline" action="@Url.Action("KetQuaTimKiem","TimKiemSp")" method="get">
                    @Html.TextBox("txttimkiem", "", htmlAttributes: new { @class = "form-control mr-sm-2 ", @type = "search", @placeholder = "search", @id = "txttimkiem" })
                    
                    <button class="btn btn-success" type="submit"><i class="fas fa-search"></i>  search</button>
                </form>
            </ul>
        </div>
    </nav>

    @RenderBody()

    <a class="scroll-to-top rounded hienthi_scrolltotop" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    @* khung footer  *@
    <footer class=" footer col-md-12 ">
        <ul>
            <li class="col-md-3">
                <img src="~/Content/images/icon/Lo_go.png" alt="" class="anh_logo_footer col-md-12">
                <p class="chu_footer">
                    TỔNG ĐÀI HỖ TRỢ (GỌI MIỄN PHÍ)
                </p>
                <p class="chu_footer">
                    Mua hàng: 1800.1061 (7:30 - 22:00)
                </p>
                <p class="chu_footer">
                    Kỹ thuật: 1800.1764 (7:30 - 22:00)
                </p>
                <p class="chu_footer">
                    Bảo hành: 1800.1065 (8:00 - 21:00)
                </p>
                <p class="chu_footer">
                    Khiếu nại: 1800.1063 (8:00 - 21:30)
                </p>
            </li>
            @Html.Action("SlideFooterPartial","Layout")
            <li class="col-md-3 khung_facebook">
            </li>
        </ul>
    </footer>

    @* thư viện jquery  *@
    <script src="~/Content/js/jquery-3.4.1.min.js"></script>
    <script src="~/Content/js/popper.js"></script>
    <script src="~/Content/js/bootstrap4.min.js"></script>
    @* thư viện font chữ *@
    <script src="~/Content/font/all.js"></script>
    @* thư viên facebook  *@
    <script async defer crossorigin="anonymous" src="~/Content/js/sdk.js"></script>
    <script src="~/Content/js/Rieng.js"></script>
    <script src="~/Content/js/sb-admin-2.js"></script>

    @*thư viện trang báo lỗi  *@
    <script src="~/Content/js/animsition.js"></script>

    <script src="~/Content/js/bootstrap.js"></script>

    <script src="~/Content/js/select2.js"></script>

    <script src="~/Content/js/moment.js"></script>
    <script src="~/Content/js/daterangepicker.js"></script>

    <script src="~/Content/js/countdowntime.js"></script>

    <script src="~/Content/js/main.js"></script>
    <script src="~/Content/js/Facebook.js"></script>
    @RenderSection("ThemThuVienJs", false)
    @RenderSection("Scripts", false)</body>
</html>
